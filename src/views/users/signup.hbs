<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Crear nuevo Usuario
      </div>
      <img
        src="/img/logo2.png"
        class="rounded-square mx-auto d-block m-4 logo"
      />
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Nombre"
              value="{{name}}"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="ejemplo@gmail.com"
              value="{{email}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Contraseña"
              value="{{password}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="confirm_password"
              placeholder="Confirmar contraseña"
              value="{{confirm_password}}"
            />
          </div>
          <button class="btn btn-primary btn-block">
            Registrate
          </button>
        </form>
      </div>
    </div>
  </div>
</div>